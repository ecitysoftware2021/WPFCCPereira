                Grid.Column="0"
                Width="350"
                HorizontalAlignment="Left"
                VerticalAlignment="Center" 
                TextAlignment="Justify"
                Text="Pasivo Total" 
                Foreground="Black"
                FontSize="35" 
                FontFamily="Arial"
                Margin="60,0,0,0"
