            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Width="350"
                HorizontalAlignment="Left"
                VerticalAlignment="Center" 
                TextAlignment="Justify"
                Text="No Corriente" 
                Foreground="Black"
                FontSize="35" 
                FontFamily="Arial"
                Margin="60,0,0,0"
            />

            <TextBlock
                Grid.Row="2"
                Grid.Column="1"
                Width="450"
                HorizontalAlignment="Right"
                VerticalAlignment="Center" 
                Foreground="Black"
                TextAlignment="Right"
                Text="$1.800.000"
                FontSize="40" 
                FontFamily="Arial"
                Margin="0,0,100,0"
            />
            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                Width="350"
                HorizontalAlignment="Left"
                VerticalAlignment="Center" 
                TextAlignment="Justify"
                Text="Activo Total" 
                Foreground="Black"
                FontSize="35" 
                FontFamily="Arial"
                Margin="60,0,0,0"
            />
            <TextBlock
                Grid.Row="3"
                Grid.Column="1"
                Width="650"
                HorizontalAlignment="Left"
                VerticalAlignment="Center" 
                TextAlignment="Justify"
                Text="Los Activos ingresados no son iguales a los Nuevos Activos totales." 
                Foreground="Red"
                FontSize="25" 
                FontFamily="Arial"
                Margin="0,0,0,0"
            />
        </Grid>
        <Grid Grid.Row="4">
            <Grid
                Grid.Row="1"
                Width="1000"
                Height="100"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,10,0,0"
