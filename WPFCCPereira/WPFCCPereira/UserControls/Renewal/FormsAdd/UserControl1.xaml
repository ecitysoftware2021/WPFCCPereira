            <Border
                Grid.Row="0"
                Grid.Column="1"
                BorderBrush="#7a837e"
                BorderThickness="3"
                CornerRadius="20"
                Width="550"
                Margin="0,10,0,10">
                <TextBox
                    Width="450"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center" 
                    Foreground="Black"
                    TextAlignment="Right"
                    Text="0"
                    FontSize="40" 
                    FontFamily="Arial"
                    Margin="0,0,30,0"
                />
            </Border>
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Width="350"
                HorizontalAlignment="Left"
                VerticalAlignment="Center" 
                TextAlignment="Justify"
                Text="No Corriente" 
                Foreground="Black"
                FontSize="35" 
                FontFamily="Arial"
                Margin="60,0,0,0"
            />

            <TextBlock
                Grid.Row="1"
                Grid.Column="1"
                Width="450"
                HorizontalAlignment="Right"
                VerticalAlignment="Center" 
                Foreground="Black"
                TextAlignment="Right"
