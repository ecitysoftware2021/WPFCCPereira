                Grid.Row="2"
                Grid.Column="1"
                BorderBrush="#7a837e"
                BorderThickness="3"
                CornerRadius="20"
                Width="550"
                Margin="0,10,0,10">
                <TextBox
                    Width="450"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center" 
                    Foreground="Black"
                    TextAlignment="Right"
                    Text="1.800.000"
                    FontSize="40" 
                    FontFamily="Arial"
                    Margin="0,0,30,0"
                />
            </Border>
            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                Width="350"
                HorizontalAlignment="Left"
                VerticalAlignment="Center" 
                TextAlignment="Justify"
                Text="Patrimonio Neto" 
                Foreground="Black"
                FontSize="35" 
                FontFamily="Arial"
                Margin="60,0,0,0"
            />

            <TextBlock
                Grid.Row="3"
                Grid.Column="1"
                Width="450"
                HorizontalAlignment="Right"
                VerticalAlignment="Center" 
                Foreground="Black"
                TextAlignment="Right"
                Text="$1.800.000"
                FontSize="40" 
                FontFamily="Arial"
                Margin="0,0,100,0"
            />
            <TextBlock
                Grid.Row="3"
                Grid.Column="0"
                Width="350"
                HorizontalAlignment="Left"
                VerticalAlignment="Center" 
                TextAlignment="Justify"
                Text="Pasivo+Patrim" 
                Foreground="Black"
                FontSize="35" 
                FontFamily="Arial"
                Margin="60,0,0,0"
            />
            <TextBlock
                Grid.Row="4"
                Grid.Column="1"
                Width="650"
                HorizontalAlignment="Left"
                VerticalAlignment="Top" 
                TextAlignment="Justify"
                Text="Los Activos ingresados no son iguales a los Nuevos Activos totales." 
                Foreground="Red"
                FontSize="25" 
                FontFamily="Arial"
                Margin="0,0,0,0"
            />
        </Grid>
    </Grid>
