<UserControl x:Class="WPFCCPereira.UserControls.Renewal.FormsPpal.UbicacionDatosGeneralesUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFCCPereira.UserControls.Renewal.FormsPpal"
             mc:Ignorable="d" 
             Height="1920" 
             Width="1080">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/images/backgrounds/bg-blanck.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
            <RowDefinition Height="300" />
            <RowDefinition Height="130" />
            <RowDefinition Height="130" />
            <RowDefinition Height="*" />
            <RowDefinition Height="400" />
        </Grid.RowDefinitions>
        <Grid Grid.RowSpan="6">
            <Border
                BorderBrush="Transparent"
                BorderThickness="0"
                Background="#ffffff"
                Width="900"
                Height="1400"
                CornerRadius="60"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="0,0,0,200">
            </Border>
        </Grid>
        <Grid Grid.Row="0">
            <Image 
                Name="btn_exit"
                Source="/Images/Buttons/btnsalir.png"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Width="250"
                Margin="50,0,0,30"
                Stretch="Uniform"
            />
        </Grid>
        <Grid Grid.Row="1" Margin="110,0,110,0">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="top" 
                TextAlignment="Center"
                Text="UBICACIÓN Y DATOS GENERALES" 
                FontSize="45" 
                FontFamily="Arial"
                Margin="0,50,0,0"
            />
            <TextBlock
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom" 
                TextAlignment="Justify"
                Text="N° Liquidación" 
                FontSize="30" 
                FontFamily="Arial"
                Margin="0,0,0,70"
            />
            <TextBlock
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom" 
                TextAlignment="Justify"
                Text="1682334" 
                FontSize="35" 
                FontFamily="Arial"
                Margin="0,0,0,30"
            />
            <TextBlock
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom" 
                TextAlignment="Right"
                Text="N° Matrícula" 
                FontSize="30" 
                FontFamily="Arial"
                Margin="0,0,0,70"
            />
            <TextBlock
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom" 
                TextAlignment="Right"
                Text="18130990" 
                FontSize="35" 
                FontFamily="Arial"
                Margin="0,0,0,30"
            />
            <Image
                Source="/Images/Others/img-split.png"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Width="800"
                Margin="0,0,0,10" 
            />
        </Grid>
        <Grid Grid.Row="2" Margin="110,0,110,0">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center" 
                FontSize="35" 
                FontFamily="Arial"
                Margin="0,0,0,0"
                Width="830"
                Height="100"
                Background="#FFAEABAB"
            />
            <TextBlock
                x:Name="UC"
                TextWrapping="Wrap" 
                Width="260"
                HorizontalAlignment="Right"
                VerticalAlignment="Center" 
                TextAlignment="Center"
                Text="UBICACIÓN NOTIFICACIÓN" 
                Foreground="#FF104B6D"
                FontWeight="Bold"
                FontSize="35" 
                Margin="0,0,100,0"
            />
            <TextBlock
                x:Name="UN"
                TextWrapping="Wrap" 
                Width="260"
                HorizontalAlignment="Left"
                VerticalAlignment="Center" 
                TextAlignment="Center"
                Text="UBICACIÓN COMERCIAL" 
                Foreground="White" 
                FontSize="35" 
                Background="#014c6c"
                Margin="100,0,0,0"
            />
        </Grid>
        <Grid Grid.Row="3" Margin="110,0,110,0">
            <TextBlock
                HorizontalAlignment="Left"
                VerticalAlignment="Top" 
                Text="Dirección" 
                FontSize="30" 
                Margin="0,0,0,0"
            />
            <TextBlock
                HorizontalAlignment="Left"
                VerticalAlignment="Center" 
                Text="CARRERA 8 NRO. 23-09" 
                FontSize="40" 
                Margin="0,0,0,0"
            />
            <Image 
                Source="/Images/Others/img-split.png"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Width="800"
                Margin="0,0,0,20" 
            />
        </Grid>
        <Grid Grid.Row="4" Margin="110,0,110,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center" 
                Text="Municipio" 
                FontSize="30" 
            />
            <ComboBox
                Width="550"
                HorizontalContentAlignment="Right"
                Grid.Row="0"
                Grid.Column="1"
                VerticalAlignment="Center"
                Background="Transparent"
                FontSize="40"
                >
                <ComboBoxItem IsSelected="True">PEREIRA</ComboBoxItem>
                <ComboBoxItem>APÍA</ComboBoxItem>
                <ComboBoxItem>BALBOA</ComboBoxItem>
                <ComboBoxItem>BELÉN DE UMBR...</ComboBoxItem>
                <ComboBoxItem>GUÁTICA</ComboBoxItem>
            </ComboBox>
            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center" 
                Text="Barrio" 
                FontSize="30" 
                FontFamily="Arial"
            />
            <TextBox
                Width="550"
                Grid.Row="1"
                Grid.Column="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Center" 
                FontSize="40"
                HorizontalContentAlignment="Right"
            />
            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center" 
                Text="Zona" 
                FontSize="30" 
            />
            <ComboBox
                Grid.Row="2"
                Grid.Column="1"
                Width="550"
                Background="Transparent"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Right"
                FontSize="40" 
                >
                <ComboBoxItem IsSelected="True">Urbana</ComboBoxItem>
                <ComboBoxItem>Rural</ComboBoxItem>
            </ComboBox>
            <TextBlock
                Grid.Row="3"
                Grid.Column="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center" 
                Text="Correo" 
                FontSize="30" 
            />
            <TextBox
                Grid.Row="3"
                Grid.Column="1"
                Width="550"
                HorizontalAlignment="Right"
                VerticalAlignment="Center" 
                HorizontalContentAlignment="Right"
                Text="luzenid@camarapereira.org.co"
                FontSize="35" 
            />
            <TextBlock
                Grid.Row="4"
                Grid.Column="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="Teléfono 1" 
                FontSize="30" 
                Margin="0,0,0,0"
            />
            <TextBox
                Grid.Row="4"
                Grid.Column="1"
                Width="550"
                HorizontalAlignment="Right"
                VerticalAlignment="Center" 
                HorizontalContentAlignment="Right"
                FontSize="40" 
            />
            <TextBlock
                Grid.Row="5"
                Grid.Column="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="Teléfono 2" 
                FontSize="30" 
            />
            <TextBox
                Grid.Row="5"
                Grid.Column="1"
                Width="550"
                HorizontalAlignment="Right"
                VerticalAlignment="Center" 
                HorizontalContentAlignment="Right"
                FontSize="40" 
                Margin="0,0,0,0"
            />
            <TextBlock
                Grid.Row="6"
                Grid.Column="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center" 
                Text="Teléfono 3" 
                FontSize="30" 
            />
            <TextBox
                Grid.Row="6"
                Grid.Column="1"
                Width="550"
                HorizontalAlignment="Right"
                VerticalAlignment="Center" 
                HorizontalContentAlignment="Right"
                FontSize="40" 
            />
            <TextBlock
                Grid.Row="7"
                Grid.Column="0"
                TextWrapping="Wrap"
                HorizontalAlignment="Left"
                VerticalAlignment="Center" 
                Text="Número de predial o cédula" 
                FontSize="30" 
            />
            <!--<TextBlock
                Grid.Row="8"
                Grid.Column="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center" 
                TextAlignment="Left"
                Text="Tipo Sede Administrativa" 
                FontSize="30" 
            />
            <ComboBox
                Grid.Row="8"
                Grid.Column="1"
                Width="550"
                Background="Transparent"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Right"
                FontSize="40" 
                >
                <ComboBoxItem IsSelected="True">Arriendo</ComboBoxItem>
                <ComboBoxItem>Propia</ComboBoxItem>
                <ComboBoxItem>No Reporta</ComboBoxItem>
                <ComboBoxItem>Comodato</ComboBoxItem>
                <ComboBoxItem>Préstamo</ComboBoxItem>
            </ComboBox>-->
            <TextBlock
                Grid.Row="8"
                Grid.Column="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center" 
                TextAlignment="Left"
                Text="Tipo de propiedad" 
                FontSize="30" 
            />
            <ComboBox
                Grid.Row="8"
                Grid.Column="1"
                Width="550"
                Background="Transparent"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Right"
                FontSize="40" 
                >
                <ComboBoxItem IsSelected="True">Local</ComboBoxItem>
                <ComboBoxItem>No reporta</ComboBoxItem>
                <ComboBoxItem>Oficina</ComboBoxItem>
                <ComboBoxItem>Local y Oficina</ComboBoxItem>
                <ComboBoxItem>Fábrica</ComboBoxItem>
            </ComboBox>
        </Grid>
        <Grid Grid.Row="5" Margin="110,0,110,0">
            <Image 
                x:Name="btnNext"
                Source="/Images/Buttons/btnsiguiente.png"
                Stretch="Uniform"
                Height="70"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,50,100,0"
            />
            <Image 
                x:Name="btnReturn"
                Source="/Images/Buttons/btnatras.png"
                Stretch="Uniform"
                Height="70"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="100,50,0,0"
            />
        </Grid>
    </Grid>
</UserControl>