                        HorizontalContentAlignment="Center"
                        Width="220"
                        Tag="u/p"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        TextChanged="Amount_TextChanged"
                        TouchDown="Amount_TouchDown"
                    />
