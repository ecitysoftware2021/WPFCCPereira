                    <ComboBoxItem Tag="4">RESOLUCIÓN 414/2014</ComboBoxItem>
                    <ComboBoxItem Tag="3">GRUPO III - MICROEMPRESAS</ComboBoxItem>
                    <ComboBoxItem Tag="2">GRUPO II</ComboBoxItem>
                    <ComboBoxItem Tag="1">GRUPO I - NIIF PLENAS</ComboBoxItem>
