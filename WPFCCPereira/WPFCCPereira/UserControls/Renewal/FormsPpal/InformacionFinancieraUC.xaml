                    FontSize="25" 
                />
            </Grid>
            <Grid Grid.Row="20">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" 
                    FontSize="35" 
                    FontFamily="Arial"
                    Margin="0,0,0,0"
                    Width="870"
                    Height="40"
                    Background="#FFAEABAB"
                />
                <TextBlock
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center" 
                    Text="Personal" 
                    FontSize="30" 
                    Foreground="#FF424242"
                    FontFamily="Arial"
                    Margin="10,0,0,0"
                />
            </Grid>
            <Grid Grid.Row="21">
                <TextBlock
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center" 
                    Text="Personal Ocupa..." 
                    FontSize="25" 
                />
                <Image 
                    Source="/Images/Others/img-split.png"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Width="900"
                    Margin="0,0,0,0" 
                />
            </Grid>
            <Grid Grid.Row="22">
                <TextBlock
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center" 
                    Text="% Personal temporal" 
                    FontSize="25" 
                />
                <Image 
                    Source="/Images/Others/img-split.png"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Width="900"
                    Margin="0,0,0,0" 
                />
            </Grid> 
            <Grid Grid.Row="23">
                <TextBlock
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center" 
                    Text="Grupo NIIF" 
                    FontSize="25" 
                />
                <ComboBox
                    Width="500"
                    HorizontalContentAlignment="Right"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    FontSize="30"
                    >
                    <ComboBoxItem IsSelected="True">GRUPO III - MICROEMPRESAS</ComboBoxItem>
                    <ComboBoxItem>RESOLUCIÓN 414/2014</ComboBoxItem>
                    <ComboBoxItem>GRUPO II</ComboBoxItem>
                    <ComboBoxItem>GRUPO I - NIIF PLENAS RESOLUCIÓN 7</ComboBoxItem>
                    <ComboBoxItem>NO REPORTA</ComboBoxItem>
                </ComboBox>
            </Grid>
        </Grid>
        <Grid Grid.Row="5" Margin="110,0,110,0">
            <Image 
                x:Name="btnNext"
                Source="/Images/Buttons/btnsiguiente.png"
                Stretch="Uniform"
                Height="70"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,10,100,0"
                TouchDown="btnNext_TouchDown"
            />
            <Image 
                x:Name="btnReturn"
                Source="/Images/Buttons/btnatras.png"
                Stretch="Uniform"
                Height="70"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="100,10,0,0"
                TouchDown="btnReturn_TouchDown"
            />
        </Grid>
    </Grid>
</UserControl>
