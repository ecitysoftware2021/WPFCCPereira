                    FontSize="25" 
                />
                <Image 
                    Source="/Images/Others/img-split.png"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Width="900"
                    Margin="0,0,0,0" 
                />
            </Grid>
            <Grid Grid.Row="9">
                <TextBlock
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center" 
                    Text="Pasivo Total" 
                    FontSize="25" 
                />
                <Image 
                    Source="/Images/Others/img-split.png"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Width="900"
                    Margin="0,0,0,0" 
                />
            </Grid>
            <Grid Grid.Row="10">
                <TextBlock
