                    Foreground="#FF104B6D" 
                    Background="#c6cfca"
                    FontSize="40" 
                    FontFamily="Arial"
                    Margin="300,0,0,0"
                />
                <TextBlock
                    x:Name="UN"
                    TextWrapping="Wrap" 
                    Width="290"
                    Height="120"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" 
                    TextAlignment="Center"
                    Text="UBICACIÓN COMERCIAL" 
                    Foreground="White" 
                    FontSize="40" 
                    Background="#014c6c"
                    FontFamily="Arial"
                    Margin="0,0,300,0"
                />
