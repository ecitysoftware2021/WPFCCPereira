                Grid.Row="1"
                Grid.Column="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Center" 
                TextAlignment="Justify"
                Text="CENTRO"
                Foreground="Black"
                FontSize="40" 
                FontFamily="Arial"
