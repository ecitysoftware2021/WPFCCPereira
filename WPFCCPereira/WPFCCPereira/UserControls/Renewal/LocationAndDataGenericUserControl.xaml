                <ComboBoxItem IsSelected="True">Itagui</ComboBoxItem>
                <ComboBoxItem>Envigado</ComboBoxItem>
            </ComboBox>

            <TextBlock
                Width="300"
                Grid.Row="1"
                Grid.Column="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center" 
                TextAlignment="Justify"
                Text="Barrio" 
                Foreground="Black"
                FontSize="40" 
                FontFamily="Arial"
                Margin="60,0,0,0"
