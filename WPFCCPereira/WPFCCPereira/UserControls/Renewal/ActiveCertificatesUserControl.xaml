<UserControl x:Class="WPFCCPereira.UserControls.Renewal.ActiveCertificatesUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFCCPereira.UserControls.Renewal"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"    
             mc:Ignorable="d" 
             Height="1920" 
             Width="1080" >
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/images/backgrounds/bg-blanck.jpg"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
            <RowDefinition Height="200" />
            <RowDefinition Height="*" />
            <RowDefinition Height="550" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Image Source="/Images/Buttons/btn-menu.png"
                   Name="btn_exit"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Width="250"
                   Margin="50,0,0,0"
                   TouchDown="Btn_exit_TouchDown" />
        </Grid>
        
        <Grid Grid.Row="1">
            <TextBlock
                TextWrapping="Wrap" 
                Width="900"
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom" 
                TextAlignment="Center"
                Text="A continuación podrá encontrar la matrícula que necesita renovar ingresando los activos de los años pendientes." 
                Foreground="Black" 
                FontSize="35" 
                FontFamily="Arial"
                Margin="0,0,0,0"
            />
        </Grid>

        <Grid Grid.Row="2" Margin="100,50,100,400">
            <Grid.Background>
                   <ImageBrush ImageSource="/WPFCCPereira;component/Images/Backgrounds/capture.png"/>
            </Grid.Background>
                <TextBlock 
                    FontSize="30"
                    FontWeight="Light"
                    FontFamily="Gotham"
                    Margin="30,10,0,0"
                    Foreground="White"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left" Background="{x:Null}"
                    >
                    <Run FontSize="25" Text="Matrícula:"/>
                    <Run FontWeight="Bold" Text="{Binding Data.matricula}"/>
                </TextBlock>
                <TextBlock 
                    Text="{Binding Data.nombre}"
                    FontSize="40"                                                                                                                                                                                                                   
                    FontFamily="Gotham"
                    Margin="30,80,0,0"
                    Foreground="Black"
                    FontWeight="SemiBold"
                    Height="60"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                />
                <TextBlock 
                    Text="Organización:"
                    FontSize="25"
                    FontFamily="Arial"
                    Margin="30,60,0,0"
                    Foreground="Black"
                    Height="60"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                />
                <TextBlock 
                    Text="{Binding Data.organizaciontextual}"
                    FontSize="30"
                    FontFamily="Arial"
                    Margin="0,140,30,0"
                    Foreground="Black"
                    Height="60"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                />
                <TextBlock 
                    Text="Último año renovado:"
                    FontSize="25"
                    FontFamily="Arial"
                    Margin="30,100,0,0"
                    Foreground="Black"
                    Height="60"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                />
                <TextBlock 
                    Text="{Binding Data.ultanorenovado}"
                    FontWeight="Bold"
                    FontSize="30"
                    FontFamily="Arial"
                    Margin="0,195,30,0"
                    Foreground="Black"
                    Height="60"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                />
                <TextBlock 
                    Text="Última fecha renovación:"
                    FontSize="25"
                    FontFamily="Arial"
                    Margin="30,137,0,0"
                    Foreground="Black"
                    Height="60"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                />
                <TextBlock
                    Text="{Binding Data.fecharenovacion}"
                    FontSize="30"
                    FontFamily="Cabri"
                    Margin="0,245,30,0"
                    Foreground="Black"
                    Height="60"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                />
                <TextBlock 
                    Text="Últimos activos reportados:"
                    FontSize="25"
                    FontFamily="Arial"
                    Margin="30,176,0,0"
                    Foreground="Black"
                    Height="60"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    />
                <TextBlock 
                    Text="$1.620.000"
                    FontSize="30"
                    FontFamily="Cabri"
                    Margin="0,200,30,0"
                    Foreground="Black"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                />
                <TextBlock 
                                FontSize="30"
                                FontFamily="Arial"
                                Margin="30,0,0,0"
                                Foreground="#FF78AD3C"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left">
                                <Run FontWeight="SemiBold" Text="Nuevos Activos"/>
                                <Run Text="por año pendientes"/>
                </TextBlock>
                <TextBlock 
                                Text="2020"
                                FontWeight="Bold"
                                FontSize="35"
                                FontFamily="Arial"
                                Margin="30,160,0,0"
                                Foreground="#FF78AD3C"
                                Height="60"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                             />
                <TextBox 
                                md:HintAssist.Hint="Nuevos Activos"
                                md:HintAssist.IsFloating="True"
                                md:HintAssist.FloatingScale="0.3"
                                Text="{Binding Val, StringFormat={}{0:C0}, UpdateSourceTrigger=PropertyChanged}"
                                FontSize="40"
                                FontFamily="Cabri"
                                Margin="0,190,60,0"
                                Foreground="Black"
                                Height="60"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
