                            />
                <TextBlock
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center" 
                                TextAlignment="Center"
                                Text="Nuevos activos es requerido" 
                                Foreground="Red" 
                                FontSize="20" 
                                FontFamily="Arial"
                                Margin="0,330,190,0"
                            />
                <TextBlock 
                                Text="Personal a nivel nacional:"
                                FontSize="25"
                                FontFamily="Arial"
                                Margin="30,0,0,150"
                                Foreground="Black"
                                Height="60"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Left"
